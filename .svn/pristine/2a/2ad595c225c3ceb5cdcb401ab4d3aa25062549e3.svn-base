// 主题区域
.wrap{
	position: relative;

	width: 1200px;
	height: 100%;
	margin: 0 auto;
}



.header_container{
	margin-bottom: 10px;

	border-bottom: 1px solid #d3d3d3;
}


.main_container{
	padding-bottom: 30px;
	min-height: 500px;

	.no_gutter .col_80{
		padding-right: 2%;
	}
}


.footer_container{
	.wrap{
		border-top: 1px solid #d3d3d3;
	}

	.crp{
		text-align: center;
	}
}




// 首页
.banner{
	height: 400px;
	padding-top: 100px;

	text-align: center;

	h2{
		font-size: 30px;
	}

	p{
		font-size: 16px;
		line-height: 2;
		letter-spacing: .1em;
	}
}

